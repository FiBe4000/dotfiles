    ]
  , sepChar = "%"
  , alignSep = "}}{{"
  , template = " <fc={color3}><icon=arch.xbm/></fc> %StdinReader% }}{{%multicpu% <fn=1><fc={color6}></fc></fn> %coretemp% <fn=1><fc={color6}></fc></fn> %memory% <fn=1><fc={color6}></fc></fn> %dynnetwork% <fn=1><fc={color6}></fc></fn> %vol% <fn=1><fc={color6}></fc></fn> <fc={color3}>%date%</fc> <fn=1><fc={color6}></fc></fn> "-- %mail% "
