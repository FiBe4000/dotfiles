  {{ font             = "xft:Helvetica Neue:antialiasing=true:size=10"
  , additionalFonts  = ["xft:DejaVuSansMono Nerd Font:pixelsize=14"]
  , borderColor      = "#073642"
  , border           = NoBorder
  , bgColor          = "{color0}"
  , fgColor          = "{color6}"
  , alpha            = 255
  , position         = Static {{ xpos = 0 , ypos = 0, width = 1824, height = 24 }}
  , textOffset       = -1
  , iconOffset       = -1
  , lowerOnStart     = True
  , hideOnStart      = False
  , pickBroadest     = False
