[module/powermenu]
type = custom/menu
expand-right = true

label-open = %{T2}
label-close = %{}  %{}
label-separator = 
format-padding = 1
format-spacing = 1
format-background = ${colors.frost4}
format-foreground = ${colors.foreground}

menu-0-0 = %{T3}
menu-0-0-exec = systemctl poweroff
menu-0-1 = %{T3}
menu-0-1-exec = systemctl reboot

