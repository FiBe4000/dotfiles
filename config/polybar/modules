[module/previous]
type = custom/ipc
format-font = 1
format-foreground = ${colors.darkestnight}
format-background = ${colors.transparent}
; Default
hook-0 = echo ""
; When spotify active
hook-1 = echo "  "
click-left = "spotifyctl -q previous"

[module/next]
type = custom/ipc
format-font = 1
format-foreground = ${colors.darkestnight}
format-background = ${colors.transparent}
; Default
hook-0 = echo ""
; When spotify active
hook-1 = echo "  "
click-left = "spotifyctl -q next"

[module/playpause]
type = custom/ipc
format-font = 1
format-foreground = ${colors.darkestnight}
format-background = ${colors.transparent}
; Default
hook-0 = echo ""
; Playing
hook-1 = echo "  "
; Paused
hook-2 = echo "  "
click-left = "spotifyctl -q playpause"

[module/spotify]
type = custom/ipc
format-font = 1
format-foreground = ${colors.darkestnight}
format-background = ${colors.transparent}
format-padding = 2
hook-0 = echo "                                  "
hook-1 = ~/.dotfiles/scripts/spotifypolybar.sh 
click-right = polybar-msg -p %pid% hook spotify 1
double-click-right = polybar-msg -p %pid% hook spotify 2

